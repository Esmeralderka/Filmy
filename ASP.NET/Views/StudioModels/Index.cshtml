
@model IEnumerable<Filmy.Models.StudioModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#FFFFFF">Wyszukaj film z konkretnej wytwórni!</h2>

@{if (User.IsInRole("admin"))
    {
        <p style="font-size:20px">
            <button type="button" class="btn btn-success"> @Html.ActionLink("Utwórz nowy", "Create", new { }, new { @style = "color:#000000;" })</button>

        </p>
    }
}



<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
      

        <th></th>
    </tr>


    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.Logo)" width="100px;" />
     
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nazwa)
    </td>
    <td style="text-align: right">
        <button type="button" class="btn btn-primary">@Html.ActionLink("Zobacz filmy ➡", "Filmy", new { id = item.ID }, new { @style = "color:#000000" }) </button>



        @{if (User.IsInRole("admin"))
            {

                <button type="button" class="btn btn-info">@Html.ActionLink("Edytuj", "Edit", new { id = item.ID }, new { @style = "color:#000000" })</button>

                <button type="button" class="btn btn-danger">@Html.ActionLink("Usuń", "Delete", new { id = item.ID }, new { @style = "color:#000000" })</button>

            }
        }
    </td>

</tr>
    }

</table>



